<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Expenses</title>
    <script defer src="/js/app.js"></script>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
</head>
<body>
    <aside>
        <%- include('../partials/_navbar.ejs') %>
    </aside>

    <main>
        <!-- modal for adding expenses  -->
        <section class="expenses-modal hide-expenses">
            <div class="flex">
                <h3>Add Expenses</h3>
                <button class="btn-close expensesBtn-close">â¨‰</button>
            </div>


            <form class="format-add" action="/users/<%= user._id %>/expenses" method="POST">

                <label for="description">Description:</label>
                <input type="text" name="description" id="description" required>

                <label for="date">Date:</label>
                <input type="date" name="date" id="date" required>

                <label for="amount">Amount:</label>
                <input type="number" name="amount" id="amount" required>

                <button class="submit-btn" type="submit">Submit</button>
                
            </form>
        </section>
        <div class="overlay hide-expenses"></div>

        <!-- end of modal -->

        <div class=" flex top-container">
            <div>
                <h2>My Expenses</h2>
                <p>Track your expenses here!</p>
            </div>
            <button class="addBtn expensesBtn-open">Add expenses</button>
        </div>



        <div class="mainIndexExp-container">

            <ul>
                <!-- function for adding all the expenses  -->
                <% function computeTotal(expense){
                    let total = 0

                    if (expense.length === 0){
                        return 0
                    } else {
                        expense.forEach(expense => {
                            total += expense.amount
                        })
                    }

                    return total
                }%>


                <table class="table-container">
                    <thead>
                        <th>Description</th>
                        <th>Date</th>
                        <th>Amount</th>
                        <th>Actions</th>
                    </thead>

                    <tbody>

                        <% expenses.forEach(expense => { %>
                          
                            <tr>
                                <td><%= expense.description %></td>
                                <td><%= expense.date.toLocaleDateString() %></td>
                                <td>$<%= expense.amount %>.00</td>
                                <td>
                                    <a class="view-btn" href="/users/<%= user._id %>/expenses/<%= expense._id %>/edit">View</a>
                                </td>
                            </tr>
                            <% }) %>

                            <tr>
                                <td colspan="2"><strong>Total Expenses</strong></td>
                                <td><strong>$<%= computeTotal(expenses) %>.00</strong></td>
                                <td></td>
                            </tr>
                    </tbody>
                </table>
            </ul>


            
        </div>
    </main>

    <footer>
        footer
    </footer>
</body>
</html>