<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Expenses</title>
</head>
<body>
    <aside>
        <%- include('../partials/_navbar.ejs') %>
    </aside>


    <main>
        <!-- start modal here -->
        <section class="editExp-modal hide-editExp">
            <div class="flex">
                <h3>Edit Expenses</h3>
                <button class="btn-close editExp-close">â¨‰</button>
            </div>

            <form class="format-add" action="/users/<%= user._id %>/expenses" method="POST">

                <label for="description">Description:</label>
                <input type="text" name="description" id="description" value="<%= expense.description %>">

                <label for="date">Date:</label>
                <input type="date" name="date" id="date" value="<%= date %>">

                <label for="amount">Amount:</label>
                <input type="number" name="amount" id="amount" value="<%= expense.amount %>">

                <button class="submit-btn" type="submit">Submit</button>
            </form>

        </section>
        <div class="overlay hide-editExp"></div>
        <!-- end of modal -->


        

        <button class="editExp-open">Edit</button>
    </main>

    <footer>
        footer
    </footer>
</body>
</html>